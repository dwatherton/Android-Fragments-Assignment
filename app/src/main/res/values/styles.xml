<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/rippleStyleWhite</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">@color/rippleStyleBlack</item>
    </style>

    <style name="DataDeviceDetailEditTextTheme">
        <item name="android:textColor">@color/grey_20</item>
        <item name="android:maxLength">@integer/max_chars_15</item>
        <item name="android:maxLines">@integer/single_line</item>
        <!--item name="android:background">@drawable/edittext_bg</item-->
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DeviceDetailDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_lmedium</item>
        <item name="android:layout_marginBottom">@dimen/margin_lmedium</item>
        <item name="android:background">@color/grey_10</item>
    </style>

    <style name="LabelDeviceDetailTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/grey_80</item>
    </style>

    <style name="DataDeviceDetailTextViewTheme" parent="LabelDeviceDetailTextViewTheme">
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
    </style>

</resources>
